{
  "name": "nodejs-typescript-boilerplate",
  "version": "1.0.0",
  "description": "a simple Nodejs starter project with Typescript",
  "main": "index.js",
  "scripts": {
    "start" : "tsc && node dist/app.js",
    "build": "tsc && npm run lint",
    "clean": "rimraf ./dist",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "tsc": "tsc",
    "test": "mocha -r ts-node/register src/**/*.spec.ts"
 },
  "author": "Abderrahim Soubai Elidrissi",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^10.11.3",
    "rimraf": "^2.6.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.1",
    "typescript-eslint-parser": "^19.0.1"
  }
}
